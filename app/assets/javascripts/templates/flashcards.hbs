<div class="row">
	<div class="large-3 columns flash-nav">
		<div class="sidebar">
			<h3>Problems</h3>
			<ul class="button-group radius round">
				<li>
					<a class="tiny button dark-blue" {{action disableFilter}}>ALL ({{length}})</a>
				</li>

				<li>
					<a class="tiny button dark-blue" {{action enableFilter}}>UNSOLVED ({{unsolvedRemaining}})</a>
				</li>
			</ul>
			<ul class="side-nav">
			{{#each filteredFlashcards}}
				<li>
					{{#link-to 'flashcard' this.id }}
						{{description}}	
					{{/link-to}}
				</li>
			
			{{else}}

				<p>You have solved everything!</p>
			{{/each}}
				<li class="divider"></li>
				<li>
					{{#link-to 'flashcards.create'}}
						new
					{{/link-to}}
				</li>
			</ul>
		</div>
	</div>
	<div class="large-9 columns">
		{{outlet}}
	</div>
</div>